@import "./../_custom-variable.styl"

.navbar {

    width: 80%
    height: 55px
    position: absolute
    top: 0
    box-shadow: 0 2px 16px $navbar-box-shadow
    flexbox(row, flex-start, center)
    background: white

    .logo {

        height: 100%
        min-width: 70px
        width: 70px
        border-right: 1px solid $navbar-logo-border
        flexbox(row, center, center)

        img {

            width: 40px
            height: 40px
        }
        @media screen and (max-width: $mobile-screen-width) {

        }
    }

    .menu-list {

        width: auto
        height: 100%
        overflow-x: scroll
        flexbox(row, flex-start, center)

        .separator {
            width: 1px
            height: 100%
            border-right: 1px solid $navbar-logo-border
        }

        ul {

            width: auto
            height: 100%
            flexbox(row, flex-start, center)

            li {

                margin: 0 22px
                list-style: none
                cursor: pointer
                letter-spacing: 1.05px
                transition: all 0.35s ease
                text-transform: uppercase
                font-size: $navbar-text-font-primary

                &.active {

                    color: $navbar-text-active
                    font-weight: bold
                }

                &.noactive {

                    color: $navbar-text-noactive
                }

            }
        }

        @media screen and (max-width: $mobile-screen-width) {

            ul {

                padding: 0 10px

                li {

                    margin: 0 8px
                }
            }

            ul.lang-selector {

                display: none
            }

            &::after {

                display: block
                content: ''
                position: absolute
                top: 0px
                right: 0px
                height: 100%
                width: 10px
                background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 100))
            }
        }

        @media screen and (min-width: $mobile-screen-width) {

            width: 100%

            ul {

                padding: 0 10px

                li {

                    &:hover {
                        color: $navbar-text-hover
                    }
                }
            }

            ul.tag-selector {
                flex-grow: 1
                flexbox(row, center, center)
            }

            ul.lang-selector {

                max-width: 100px
                align-self: flex-end
                flexbox(row, center, center)

                li {
                    padding: 5px 0
                    border: 1px solid transparent

                    &.active {

                        font-weight: normal
                        color: $navbar-text-noactive
                        border-bottom: 1px solid $navbar-text-noactive
                    }
                }
            }
        }
    }

    @media screen and (max-width: $mobile-screen-width) {

        width: 100%
        height: 65px
        position: fixed
        top: inherit
        bottom: 0
        box-shadow: 0 2px 16px $navbar-box-shadow
        flexbox(row, flex-start, center)
    }

    @media screen and (min-width: $mobile-screen-width) {

        &.navbar--abs {

            width: 80%
            height: 55px
            position: fixed
            top: 50%
        }

        &.navbar--fixed {

            width: 100%
            height: 55px
            position: fixed
            top: 0
        }
    }
}
