@import "./_custom-variable.styl"
@import "./general/PopOutMenu.styl"
@import url('https://fonts.googleapis.com/css?family=Abel|Advent+Pro|Cantata+One|Noto+Sans')
// blur effect in /gerneral/popOutMenu

body {
    padding: 0
    margin: 0
    box-sizing: content-box
    min-height: 200vh
    height: auto
    font-family: 'Noto Sans', serif
    line-height: 2em
    color: rgba(0,0,0,.7)
    // background-image: linear-gradient(60deg, rgba(#abecd6, 1) 0%, rgba(#fbed96, 0.25) 100%);
    // background-image: linear-gradient(60deg, rgba(#abecd6, 1) 0%, rgba(white, 0.25) 100%);

    #app {
        width: 100%
        height: 100%
    }

    ul {
        padding: 0
        margin: 0
    }

    li {

        text-decoration: none

        a {
            text-decoration: none
        }
    }
    .mainPage {
        &.blur-in {
            animation: blur 0.35s forwards;
        }
    }
    .content--wrapper {
        z-index: 1
        min-height: 200vh
        width: calc(100% - 100px)
        height: calc(100% - 100px)
        flexbox(column, flex-start, center)
        // background: radial-gradient(rgba(white, 1) 0%, rgba(white, 0) 100%)

        &.blur-in {
            z-index: 9999;
            // animation: blur 2s forwards;
        }
    }

    .navbar {
        &.blur-in {
            animation: blur 2s forwards;
        }
    }

    .subpage--banner--wrapper {
        &.blur-in {
            animation: blur 2s forwards;
        }
    }
    @media only screen and (max-width: $mobile-screen-width) {

        .content--wrapper {

            width: calc(100%)
            height: calc(100%)
        }
    }

    div.popOutMenu--mobile {
        position: fixed;
        top: 0
        left: 0
        width: 100vw
        height: 100vh
        background: transparent
        z-index: 9999;
        display: none;
        overflow: scroll;

        &.active {
            display: block;
        }

        &.blur-out {
            animation: blur-out 0.35s forwards;
        }

        .popOutMenu--bg {
            z-index: 0
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('./../static/staff/blur-bg.png')
            background-size: cover;

            &.blur-in {
                animation: blur 2s forwards;
            }
        }

        .popOutMenu--content {
            z-index: 1
            flexbox(column, center, center)

            .content--title {
                z-index: 9999;
                width: 100%;
                height: 100px;
                text-align: center;
                font-size: 20px;
                flexbox(column, center, center)
                color: $navbar-text-hover;
            }

            .content--close {
                z-index: 9999;
                width: 100%;
                height: 50px;
                text-align: center;
                font-size: 20px;
                flexbox(column, center, center)

                img {
                    width: 20px;
                    height: 20px;
                    fill: black;
                }
            }
        }

        &.indexpage--popOut--history,
        &.indexpage--popOut--social {

            ul {
                max-width: 320px
                width: 100%
                z-index: 9999
                height: calc(100vh - 100px - 50px)
                overflow: scroll;
            }

            .sponsor {
                z-index: 9999
                width: 100%
                margin: 20px 0
                box-shadow: rgba(#8A6B76, 0.08) 0px 4px 8px
                flexbox(column, flex-start, flex-start)

                .sponsor--sponsorimage {
                    width: 100%
                    a {
                        width: 100%
                        padding: 18px 12px
                        max-width: calc(100% - 24px)
                        flexbox(row, center, center)
                        background-color: white
                    }
                }

                .sponsor--content--mobile {
                    flexbox(row, space-between, center)
                    padding: 10px;
                    width: 100%;
                    max-width: 300px;
                    background-image: linear-gradient(180deg, rgba(#000, 0.04) 0%, rgba(#000, 0) 100%);
                    background-color: white;

                    a {
                        width: 20px
                        height: 20px

                        img {
                            width: 20px
                            height: auto
                        }
                    }
                }
            }
        }

        &.indexpage--popOut--social {
            ul {
                flexbox(row, flex-start, flex-start)
                flex-wrap: wrap;

                a {
                    width: 50% !important;
                    height: auto;
                    text-align: center;

                    img {
                        width: 64px;
                        height: 64px;
                    }
                }
            }
        }
    }
}
