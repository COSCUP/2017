
@import "./../_custom-variable.styl"

.stafflist {
    margin-bottom: 150px;
    flex-wrap: wrap
    column-gap: 50px

    @media screen and (min-width: 600px) {
      column-count: 2
    }
    @media screen and (min-width: 1000px) {
      column-count: 3
    }

    a {
        display: block
        width: 100%

        -webkit-column-break-inside: avoid; /* Chrome, Safari */
        page-break-inside: avoid;           /* Theoretically FF 20+ */
        break-inside: avoid-column;         /* IE 11 */
        display:table;                      /* Actually FF 20+ */

        cursor: default
        text-decoration: none
        margin-right: 50px
        .card {
            display: block;
            width: 100%
            background-color: rgba(255,255,255,.7);
            padding: 15px;
            box-shadow: 0 20px 50px $shadow-color
            border-radius: 5px
            box-sizing: border-box;
            margin-right: 50px;
            margin-bottom: 50px;

            .title {
                font-size: 24px;
                color: #009A79;
                margin: 15px 15px 15px 0
            }

            .content {
                width: 100%;
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                @media screen and (min-width: 800px) {
                  grid-template-columns: repeat(3, 1fr);
                }
                @media screen and (min-width: 1200px) {
                  grid-template-columns: repeat(4, 1fr);
                }
                .person {


                    display: inline-block;
                    margin-bottom: 15px;

                    .person--wrapper {
                        flexbox(column, flex-start, center)
                        .photo {

                            display: none;
                            width: 100px;
                            height: 100px;
                            margin-bottom: 15px;
                        }

                        .name {
                            font-size: 16px
                        }
                    }
                }
            }

        }
    }
}

.stafflist--popOut {
    .popOutMenu--bg {
        background-image: url('./../../static/staff/blur-bg.png') !important;
    }
    .popOutMenu--content {
        width: 100%;

        ul {
            z-index: 9999
            width: 100%
            height: 100vh
            flexbox(row, space-between, space-between)
            flex-wrap: wrap;

            li {
                flexbox(row, center, center)
                width: 50%
                text-decoration: none

                a {
                    color: black
                }
            }
        }

    }
}
