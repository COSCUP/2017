@import "./../_custom-variable.styl"

.content--wrapper {
    > div.subPage {

        width: 100%
        height: 100%
        display: flex
        overflow: hidden
        flex-direction: column
        align-items: center

        .subpage--title {
            margin-top: 0px
            background: linear-gradient(-315deg, #F9FEA5, #20E2D7)
            width: 100%
            height: 75px
            flexbox(column, flex-start, center)
            visibility: hidden;

            .title--text {
                line-height: 40px
                color: black
                font-size: $subpage-title-text
                text-transform: uppercase
            }

            @media only screen and (max-width: $mobile-screen-width) {

                font-family: $title-Big-Caslon
                color: $navbar-logo-border
                flexbox(column, center, center)
                visibility: visible;

            }
        }

        @media only screen and (max-width: $mobile-screen-width) {

            align-items: flex-start
        }

    }
}
