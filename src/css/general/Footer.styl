@import "./../_custom-variable.styl"

#footer::before, #footer::after {
  content: ' ';
  display: block;
  position: absolute;
  z-index: -2;
  width: 1400px;
  height: 1400px;
  bottom: 0;
  left: 50vw;
}

#footer::before {
  background-image: linear-gradient(to bottom, #F9FEA5, #20E2D7);
  transform: rotate(40deg) translate(-50px, 1180px);
}

#footer::after {
  background-image: linear-gradient(to bottom, #FDDB92, #D1FDFF);
  height: 2166px;
  opacity: .4;
  transform: rotate(40deg) translate(-1020px, 1858px);
}

#footer {
    position: relative;
    margin: 0 auto;
    padding-bottom: 64px
    max-width: 1200px;
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, .9), rgba(255, 255, 255, 0));
    section {
      h2 {
        margin: 0;
        padding: 32px;
      }
    }
    .content--footer--social {
        margin: 20px 0;
        flexbox(row, center, center)

        a {

            color: #ffffff;
            width: 32px;
            height: 32px;
            margin: 0 16px;
            display: block;

            img {
                width: 100%;
                height: auto;
            }
        }
    }

    .content--footer--history {

        flexbox(row, center, flex-first)

        div {

            display: inline-block;
            padding-left: 2px;
            padding-right: 2px;

            a {
                color: #ffffff;
            }
        }


        div:after {

            color: #ffffff;
            content: ' |';
        }

        div:last-child:after {

            content: '';
        }

        @media only screen and (max-width: $mobile-screen-width) {

            display: block;
        }
    }

    .content--footer--mobile {
        display: none;
    }

    @media only screen and (max-width: $mobile-screen-width) {

        height: auto;

        .content--footer--history,
        .content--footer--social {
            display: none;
        }

        .content--footer--mobile {
            display: block;
            width: 100%;
            margin-bottom: 40px;
            flexbox(column, flex-start, center);

            .btn-mobile {
                max-width: $mobile-screen-width;
                width: calc(100% - 65px);
                text-align: center;
                padding: 10px 0;
                color: $navbar-text-hover;
                margin-bottom: 40px;
                box-shadow: rgba(#848484, 0.5) 12px 16px 36px
                cursor: pointer;
                background-image: linear-gradient(310deg, rgba(#20E2D7, 1) 0%, rgba(#F9FEA5, 1) 150%);
            }
        }
    }
}
