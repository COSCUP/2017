@import "./../general/SubpageContent.styl"

.sponsor--sponsorlist {


    .title--wrapper {
        flexbox(row, flex-end, flex-end)
        .title {
            font-size: 40px;
            margin-left: 16px;
            margin-right: 16px;
            margin-bottom: 8px;
            border-bottom: 1px solid #000
        }
        margin-top: 64px;
        margin-bottom: 64px;
    }

    .sponsor {

        flexbox(row, flex-start, flex-start)

        .sponsor--sponsorimage {
            
            a {
                font-size: 0px
                display: inline-block;

                img {
                    height: 150px;
                    width: 250px;
                }
            }
        }
        .sponsor--content {
            max-width: 900px;
            .sponsor--title {
                font-size: 25px;
                margin-bottom: 16px;
            }
            .sponsor--description {
            }
        }
    }
}
