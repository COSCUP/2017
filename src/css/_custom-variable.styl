// global
$mobile-screen-width = 720px
$title-Big-Caslon = 'Big Caslon'

// navbar border
$navbar-logo-border = #E9E9E9
$navbar-box-shadow = rgba(216, 216, 216, 0.50)
$navbar-text-noactive = #9B9B9B
$navbar-text-active = #000000
$navbar-text-hover = #009A79

$navbar-text-font-primary = 14px
$navbar-text-font-button = 18px
$shadow-color = rgba(0,0,0,.1)

// subpage
$subpage-title-text = 20px


// flexbox function
flexbox($type, $a, $b)
    display: flex
    flex-direction: $type
    justify-content: $a
    align-items: $b

// blur animation
@keyframes blur {
    0% {
        filter: blur(0px);
    }

    100% {
        filter: blur(5px);
    }
}

@keyframes blur-out {
    0% {
        filter: blur(5px);
    }

    100% {
        filter: blur(0px);
    }
}
