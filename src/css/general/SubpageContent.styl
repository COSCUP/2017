@import "./../_custom-variable.styl"

.content--wrapper {

    div.subPage {

        width: 100%
        display: flex
        overflow: hidden
        flex-direction: column
        align-items: center
        margin-bottom: 150px

        .mobile.subpage--title {

            position: fixed;
            z-index: 10;
            margin-top: 0px
            background: linear-gradient(-315deg, #F9FEA5, #20E2D7)
            width: 100%
            height: 75px
            flexbox(column, flex-start, center)
            visibility: hidden;

            div.popout--toggler {
                width: 24px;
                height: 24px;
                margin: 0 20px;
            }

            .title--text {
                line-height: 40px
                color: black
                font-size: $subpage-title-text
                text-transform: uppercase
            }

            @media only screen and (max-width: $mobile-screen-width) {

                font-family: $title-Big-Caslon
                color: $navbar-logo-border
                flexbox(row, space-between, center)
                visibility: visible;

            }
        }
        .desktop.subpage--title {
            width: 100%
            height: 150px
            text-align: center
            margin-top: 100px
            margin-bottom: 150px
            transform: translateX(-15px);

            .title--text {
                line-height: 60px
                color: black
                font-size: 40px
                text-transform: uppercase
                text-align: center
                font-family: Abel
                flexbox(column, center, center)
                .divider {
                    width: 50px
                    height: 5px
                    background-color: black
                }
            }
            @media only screen and (max-width: $mobile-screen-width) {
                visibility: hidden;
                display: none;
            }
        }

        @media only screen and (max-width: $mobile-screen-width) {

            align-items: flex-start
        }

    }

    div.popOutMenu--mobile {
        position: fixed;
        top: 0
        left: 0
        width: 100vw
        height: 100vh
        background: transparent
        z-index: 9999;
        display: none;

        &.active {
            display: block;
        }

        &.blur-out {
            animation: blur-out 0.35s forwards;
        }

        .popOutMenu--bg {
            z-index: -1
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('./../../static/staff/blur-bg.png')
            background-size: cover;

            &.blur-in {
                animation: blur 2s forwards;
            }
        }

        .popOutMenu--content {
            z-index: 1
            flexbox(column, center, center)

            .content--close {
                z-index: 9999;
                width: 100%;
                height: 50px;
                text-align: center;
                font-size: 20px;
                flexbox(column, center, center)

                img {
                    width: 20px;
                    height: 20px;
                    fill: black;
                }
            }
        }
    }

    // &.blur-in {
    //     animation: blur 2s forwards;
    // }
}
